#!/usr/bin/env bash
# Process and PID file
pid_file="/var/run/myscript.pid"

cleanup() {
    echo "I hate the kill command"
    rm -f "$pid_file"
    exit
}

handle_sigint() {
    echo "Y U no love me?!"
}

trap 'cleanup' SIGTERM SIGQUIT
trap 'handle_sigint' SIGINT

echo $$ > "$pid_file"

while true; do
    echo "To infinity and beyond"
    sleep 2
done

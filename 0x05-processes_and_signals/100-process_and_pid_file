#!/bin/bash
# This script manages its PID, displays messages, and responds to signals.

# Define the PID file path
pid_file=/var/run/my_script.pid

# Function to clean up and exit
cleanup() {
    sudo rm -f $pid_file
    exit
}

# Signal handlers
trap 'cleanup' SIGQUIT SIGTERM
trap 'echo "Y U no love me?!"' SIGINT

# Create the PID file
sudo bash -c "echo $$ > $pid_file"

# Main loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done

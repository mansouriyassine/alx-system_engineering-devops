#!/usr/bin/env bash
# This script is intended to fix the web server and serve a specific page

# Ensure Apache is installed, install if it isn't
which apache2 >/dev/null || apt-get update && apt-get install -y apache2

# Start the Apache service
service apache2 start

# Ensure the document root has the correct "Hello Holberton" page
echo "Hello Holberton" > /var/www/html/index.html

# Restart Apache to ensure all configurations are applied
service apache2 restart

#!/usr/bin/env bash
# This is for task 0. The script configures an Nginx server with a custom header 'X-Served-By'

# Update package list and install Nginx
apt-get update -y
apt-get install -y nginx

# Create a simple page for index.html
echo "Hello World!" > /var/www/html/index.nginx-debian.html

# Set up a custom 404 page error 
echo "Ceci n'est pas une page" > /usr/share/nginx/html/custom_404.html

# Configure Nginx to serve the custom error page and add the 'X-Served-By' header
sed -i '/server_name _;/a \\\trewrite ^\/redirect_me https:\/\/github.com\/ChidiChuks permanent;\n\terror_page 404 \/custom_404.html;\n\tlocation = \/custom_404.html {\n\t\troot \/usr\/share\/nginx\/html;\n\t\tinternal;\n\t}' /etc/nginx/sites-available/default
sed -i '/http {/a \\\tadd_header X-Served-By $HOSTNAME;' /etc/nginx/nginx.conf

# Restart Nginx
service nginx restart
